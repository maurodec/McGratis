<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/sundae_background"
        android:clickable="true"
        android:textColor="@color/white"
        android:text="@string/sundae"
        android:shadowColor="@color/transparentBlack"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:gravity="bottom|right"
        android:padding="10dip"
        android:textSize="85sp"
        android:onClick="mcd2"/>

    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/juice_background"
        android:clickable="true"
        android:textColor="@color/white"
        android:text="@string/juice"
        android:shadowColor="@color/transparentBlack"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:gravity="bottom|right"
        android:padding="10dip"
        android:textSize="85sp"
        android:onClick="mcd1"/>
</LinearLayout>
